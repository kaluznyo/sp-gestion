<p>Les champs marqués d'une astérisque (*) sont obligatoires.</p>
<%= form_for(@reply, :as => :reply, :url => reply_conversation_path(@conversation), :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
      <%= f.label(:body, "Message (*)", :class => 'col-md-5 control-label') %>
      <div class="col-md-7">
        <%= text_area_tag('reply[body]', '', :rows => 5, :class => 'form-control') %>
        <%= error_message_on(:reply, :body) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-7 col-md-offset-5">
        <%= submit_tag("Envoyer", :class => 'btn btn-primary btn-lg') %> ou <%= link_to("Annuler", vehicles_path)%>
      </div>
    </div>
  </div>
</div>
</fieldset>
<%- end -%>
