<div class="btn-toolbar pull-right">
  <div class="btn-group">
    <%= link_to(icon_label_text('glyphicon glyphicon-plus', 'Nouveau message'),
                new_conversation_path,
                :class => 'btn btn-default btn-sm') %>
  </div>
</div>

<br class="clearfix" />

<%= render_navigation(:context => :conversations) %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th width="25%"></th>
      <th width="60%">Sujet</th>
      <th width="15%" class="text-right">Date</th>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => 'conversation', :collection => @conversations,
                                           :locals => {:mailbox_type => @mailbox_type}) ||
        raw("<tr><td colspan='3'>Pas encore de conversation !</td></tr>") %>
  </tbody>
</table>
<%= page_navigation_links(@conversations) %>
